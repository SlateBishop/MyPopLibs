<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/activity_main_container_padding">

    <TextView
        android:id="@+id/textViewFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_first_text" />

    <Button
        android:id="@+id/btnCounterFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_counter_init_text" />

    <TextView
        android:id="@+id/textViewSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_second_text" />

    <Button
        android:id="@+id/btnCounterSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_counter_init_text" />

    <TextView
        android:id="@+id/textViewThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_third_text" />

    <Button
        android:id="@+id/btnCounterThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_counter_init_text" />

</LinearLayout>